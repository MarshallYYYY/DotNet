<UserControl
    x:Class="MaterialDesignMessageBox.Views.MdMessageBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MaterialDesignMessageBox.Views"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
    xmlns:viewmodels="clr-namespace:MaterialDesignMessageBox.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:MdMessageBoxViewModel}">

    <Grid
        Width="320"
        Background="White"
        Margin="20">
        
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock
            Text="{Binding Path=Title}"
            FontSize="22"
            FontWeight="Bold"
            Margin="10" />

        <!-- 内容 -->
        <TextBlock
            Text="{Binding Path=Message}"
            Margin="10"
            FontSize="18"
            Grid.Row="1"
            TextWrapping="Wrap" />

        <!-- 按钮 -->
        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            Margin="10"
            Grid.Row="2">

            <Button
                Content="确认"
                Width="72"
                Margin="20"
                Command="{Binding Path=OkCommand}" />

            <Button
                Content="取消"
                Width="72"
                Margin="20"
                Command="{Binding Path=CancelCommand}" />

        </StackPanel>
        
    </Grid>
</UserControl>