<Window
    x:Class="MaterialDesignMessageBox.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MaterialDesignMessageBox.Views"
    mc:Ignorable="d"
    Title="MainView"
    Height="450"
    Width="800"
    xmlns:common="clr-namespace:MaterialDesignMessageBox.Common"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewmodels="clr-namespace:MaterialDesignMessageBox.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}">
    <Grid>

        <md:DialogHost
            CloseOnClickAway="True"
            IsOpen="{Binding Path=IsOpen}"
            Identifier="RootDialog">

            <StackPanel>
                <Button
                    Margin="20"
                    Content="MdMessageBox"
                    Command="{Binding Path=OpenMdMessageBoxCommand}" />
                <Button
                    Margin="20"
                    Content="IsOpen"
                    Command="{Binding Path=SetIsOpenCommand}" />
            </StackPanel>

            <md:DialogHost.DialogContent>
                <TextBlock
                    FontSize="27"
                    Text="MainView.xaml 中 固有的 DialogContent" />
            </md:DialogHost.DialogContent>

        </md:DialogHost>

        <!-- 全局 MessageBox -->
        <!--可以设置多个 DialogHost-->
        <md:DialogHost
            Identifier="{x:Static common:AppConstants.DialogHostMdMessageBox}" />
    </Grid>

</Window>