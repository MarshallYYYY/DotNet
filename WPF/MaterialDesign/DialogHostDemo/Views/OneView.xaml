<Window
    x:Class="DialogHostDemo.Views.OneView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:DialogHostDemo.Views"
    mc:Ignorable="d"
    Title="OneView"
    Height="450"
    Width="800"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewmodels="clr-namespace:DialogHostDemo.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:OneViewModel}">

    <!--对话框本身包含要显示的内容。默认情况下，对话框显示在弹出窗口内部。
    由于弹出窗口是一个单独的窗口，因此对话框可以大于其父窗口。
    如果要将对话框限制到其父窗口，则可以将静态资源样式 MaterialDesignEmbeddedDialogHost 应用于 DialogHost。-->
    <!--Style="{StaticResource MaterialDesignEmbeddedDialogHost}"-->

    <!--若要使对话框在用户单击叠加层时自动关闭，请将 CloseOnClickAway 属性设置为“True”。-->
    <!--DialogHost 提供了一个 IsOpen 属性。切换此属性的状态可以控制对话框显示或隐藏。-->
    <md:DialogHost
        IsOpen="{Binding Path=IsDialogHostOpen}"
        Identifier="One"
        CloseOnClickAway="True">

        <md:DialogHost.DialogContent>
            <Grid
                Margin="16">
                <TextBlock
                    Text="我的第一个DialogHost"
                    FontSize="20" />
            </Grid>
        </md:DialogHost.DialogContent>

        <StackPanel>

            <Button
                Command="{x:Static md:DialogHost.OpenDialogCommand}"
                Content="打开 md:DialogHost.OpenDialogCommand"
                FontSize="22"
                HorizontalAlignment="Center"
                Margin="0,20" />
            <Button
                Command="{Binding Path=ShowDialogHostCommand}"
                Content="打开 ShowDialogHostCommand"
                FontSize="22"
                HorizontalAlignment="Center"
                Margin="0,20" />

        </StackPanel>

    </md:DialogHost>
</Window>