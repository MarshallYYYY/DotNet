<Window
    x:Class="Style.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Style"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="450"
    Width="800">

    <Window.Resources>
        <Style
            x:Key="myBtn"
            TargetType="{x:Type Button}">
            <Setter
                Property="FontSize"
                Value="30" />
            <Setter
                Property="Background"
                Value="Cyan" />
            <Setter
                Property="Width"
                Value="100" />
            <Setter
                Property="Height"
                Value="40" />
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel>
            <Button
                Content="Hello"
                Style="{StaticResource myBtn}" />
            <Button
                Content="Hello"
                Style="{StaticResource myBtn}" />
            <Button
                Content="Hello"
                Style="{StaticResource myBtn}" />
        </StackPanel>
    </Grid>

</Window>