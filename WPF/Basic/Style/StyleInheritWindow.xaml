<Window
    x:Class="Style.StyleInheritWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Style"
    mc:Ignorable="d"
    Title="StyleInheritWindow"
    Height="450"
    Width="800">
    
    <Window.Resources>
        <Style
            x:Key="baseBtn"
            TargetType="Button">
            <Setter
                Property="FontSize"
                Value="30" />
            <Setter
                Property="Background"
                Value="Blue" />
        </Style>

        <Style
            x:Key="myBtn1"
            TargetType="Button"
            BasedOn="{StaticResource baseBtn}">
            <Setter
                Property="Width"
                Value="100" />
            <Setter
                Property="Height"
                Value="40" />
        </Style>

        <Style
            x:Key="myBtn2"
            TargetType="Button"
            BasedOn="{StaticResource baseBtn}">
            <Setter
                Property="Width"
                Value="70" />
            <Setter
                Property="Height"
                Value="70" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <StackPanel>
            <Button
                Content="Hello"
                Style="{StaticResource baseBtn}" />
            <Button
                Content="Hello"
                Style="{StaticResource myBtn1}" />
            <Button
                Content="Hello"
                Style="{StaticResource myBtn2}" />
        </StackPanel>
    </Grid>
    
</Window>